<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#"></a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                @Html.ActionLink("Create Trivia", "Main", "Home", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Answer Trivia", "Trivia", "Home", new { @class = "nav-link" })
            </li>
        </ul>
    </div>
</nav>

<div style="float:right">
    <ul class="navbar-nav">
        <li class="nav-item active">
            @Html.ActionLink("Log off", "LogOff", "Home", routeValues: null, htmlAttributes: new { id = "" })
        </li>

    </ul>
</div>
<div style="float:right;margin-right:50px">
    <label style="font-style:italic" class="alert alert-info">Logged in as - @Session["UserName"] </label><br />
    <label style="font-style:italic" class="alert alert-info">Current points =><b class="alert alert-info"> @ViewBag.Score</b></label><br />

</div>
<div style="width:400px" class="alert alert-warning">

</div>
<div class="container-fluid">
    
    <h4>Create trivia question </h4>

    @using (Html.BeginForm("CreateQuestion", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "createUserClicked(event)" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Question, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Question, new { @class = "form-control", placeholder = "Enter a question" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CorrectAnswer, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.CorrectAnswer, new { @class = "form-control", placeholder = "Enter a correct answer for the question" })
        </div>
        <div class="form-group">
            @Html.Label("Tags", new { @class = "control-label" })
            @Html.DropDownListFor(m => m.selectedTags, (IEnumerable<SelectListItem>)ViewData["ListItems"], "- Select Any -", new { @class = "form-control" })
        </div>
        <div class="row">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
              
    }
       

</div>













<div class="invisible">
    <div style="">

        <button style="margin-bottom:5px" class="btn btn-Info " title="Start Playing" id="Playing" type="button" onClick="StartPlaying()"><i class="glyphicon-Primary"></i>Start Playing</button>
        <button style="margin-bottom:5px" class="btn btn-Info " title="CreateQuestions" id="Creating" type="button" onClick="OpenCreating()"><i class="glyphicon-Primary"></i>Create Questions</button>
    </div>
    <div style="float:right">
        <label style="font-style:italic">Logged in as - @Session["username"] </label><br />
        <label style="font-style:italic">Current points -0 </label>

    </div>
</div>


 